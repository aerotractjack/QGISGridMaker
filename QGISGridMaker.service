[Unit]
Description=Run QGISGridMaker API
After=network.target

[Service]
WorkingDirectory=/home/aerotract/software/QGISGridMaker
User=aerotract
Restart=on-failure
Environment="QT_QPA_PLATFORM=offscreen"
ExecStart=/usr/bin/python3 /home/aerotract/software/QGISGridMaker/api.py

[Install]
WantedBy=multi-user.target
